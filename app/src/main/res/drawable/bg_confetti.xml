<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFF9F2" />
        </shape>
    </item>
    <item android:gravity="center">
        <shape android:shape="oval">
            <size android:width="120dp" android:height="120dp" />
            <solid android:color="#33FF6B6B" />
        </shape>
    </item>
    <item android:gravity="top|end">
        <shape android:shape="oval">
            <size android:width="90dp" android:height="90dp" />
            <solid android:color="#3306D6A0" />
        </shape>
    </item>
    <item android:gravity="bottom|start">
        <shape android:shape="oval">
            <size android:width="100dp" android:height="100dp" />
            <solid android:color="#33FFD166" />
        </shape>
    </item>
</layer-list>
